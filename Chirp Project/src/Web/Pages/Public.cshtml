@page "/"
@model Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

@using Infrastructure
@using System.Security.Claims

@inject SignInManager<ApplicationUser> SignInManager


<div>
    <h2> Public Timeline </h2>

    @if (SignInManager.IsSignedIn(User))
    {
        <div class="cheepbox">
            <h3>What's on your mind @(User.Identity!.Name!)?</h3>
            <form method="post">
                @Html.AntiForgeryToken()
                <input style="float: left" type="text" input id="Cheep_Text" name="Text" asp-for="Text" maxlength="160">
                <input type="submit" value="Share">
            </form>
        </div>
    }

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.Timestamp</small>

                        <small>Likes @cheep.Likes.Count</small>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if(User.FindFirst(ClaimTypes.Email)?.Value != cheep.Email) {
                                <!-- Follow Button -->
                                <form method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="Email" value="@cheep.Email"/>
                                    <button type="submit" formaction="/?handler=Follow">
                                        @(cheep.IsFollowed ? "Unfollow" : "Follow")
                                    </button>
                                </form>
                            }
                            <!-- Like Button -->
                            <form method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="CheepID" value="@cheep.CheepId" />
                                <button type="submit" formaction="/?handler=Like">
                                    @(cheep.IsLiked ? "UnLike" : "Like")
                                </button> 
                            </form>
                        }
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>